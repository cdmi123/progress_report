<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student Dashboard</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    body {
      background: linear-gradient(to right, #dfe9f3, #ffffff);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.85);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
      transition: 0.3s ease-in-out;
    }

    .glass-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .section-title {
      font-weight: 700;
      color: #0d6efd;
      font-size: 2rem;
    }

    .info-label {
      font-weight: 600;
      color: #333;
    }

    .info-icon {
      color: #0d6efd;
      margin-right: 10px;
    }

    .info-box {
      padding: 8px 0;
    }

    .btn-glass {
      border-radius: 0.5rem;
      font-weight: 600;
      transition: all 0.3s;
    }

    .btn-glass:hover {
      background-color: #0d6efd;
      color: white;
    }

    @media (max-width: 768px) {
      .info-box {
        text-align: center;
        flex-direction: column;
      }

      .info-icon {
        margin-bottom: 4px;
      }
    }
  </style>
</head>

<body>
  <div class="container py-5">
    <h2 class="text-center mb-5 section-title">
      <i class="bi bi-person-circle me-2"></i>Student Dashboard
    </h2>

    <!-- Student Info Card -->
    <div class="glass-card p-4 mb-5">
      <h4 class="text-center mb-4 text-dark fw-bold">
        <i class="bi bi-person-check-fill me-2 text-primary"></i>Welcome, <%= student.name %>
      </h4>

      <div class="row text-center text-md-start">
        <div class="col-md-4 info-box d-flex align-items-center justify-content-center justify-content-md-start">
          <i class="bi bi-card-text fs-4 info-icon"></i>
          <span class="info-label">Reg. No:</span>&nbsp;<%= student.regNo %>
        </div>
        <div class="col-md-4 info-box d-flex align-items-center justify-content-center justify-content-md-start">
          <i class="bi bi-telephone-fill fs-4 info-icon"></i>
          <span class="info-label">Phone:</span>&nbsp;<%= student.contact %>
        </div>
        <div class="col-md-4 info-box d-flex align-items-center justify-content-center justify-content-md-start">
          <i class="bi bi-person-video3 fs-4 info-icon"></i>
          <span class="info-label">Faculty:</span>&nbsp;<%= student.facultyName %>
        </div>
      </div>
    </div>

    <!-- Progress Reports -->
    <div class="row g-4">
      <% studentReports.forEach(report => { %>
        <div class="col-md-6 col-lg-4">
          <div class="glass-card h-100 p-4 d-flex flex-column">
            <h5 class="fw-semibold text-primary mb-2">
              <i class="bi bi-journal-code me-1"></i><%= report.course.name %>
            </h5>
            <p class="mb-1"><strong>Start Date:</strong> <%= student.startDate %></p>
            <p class="mb-3"><strong>End Date:</strong> <%= student.endDate %></p>
            <a href="/student/report/<%= report._id %>" class="btn btn-outline-primary mt-auto btn-glass">
              <i class="bi bi-file-text me-1"></i>View Progress Report
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
