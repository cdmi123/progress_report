<h3 class="text-primary">Welcome, <%= student.name %></h3>
<p><strong>Registered Courses:</strong>
  <% student.courses.forEach(c => { %>
    <span class="badge bg-secondary"><%= c.name %></span>
  <% }) %>
</p>

<div class="card mt-4 shadow-sm">
  <div class="card-body">
    <h5 class="mb-3">ðŸ“‹ Your Progress Reports</h5>
    <ul class="list-group">
      <% reports.forEach(r => { %>
