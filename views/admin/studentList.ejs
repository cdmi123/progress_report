<div class="container-fluid py-4">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="fw-bold text-primary">
        <i class="bi bi-people-fill me-2"></i> All Students
      </h2>
      <p class="text-muted mb-0">Manage and view all student records</p>
    </div>
    <a href="/admin/student/add" class="btn btn-primary d-flex align-items-center">
      <i class="bi bi-person-plus-fill me-2"></i> Add Student
    </a>
  </div>

  <!-- Status Filter and Search -->
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3 align-items-center">
        <div class="col-md-4">
          <label class="form-label fw-semibold mb-2">Filter by Status:</label>
          <div class="btn-group w-100" role="group">
            <a href="/admin/students?status=Running" 
               class="btn <%= (currentStatus === 'Running' || !currentStatus) ? 'btn-primary' : 'btn-outline-primary' %>">
              <i class="bi bi-play-circle me-1"></i> Running
            </a>
            <a href="/admin/students?status=Completed" 
               class="btn <%= currentStatus === 'Completed' ? 'btn-success' : 'btn-outline-success' %>">
              <i class="bi bi-check-circle me-1"></i> Completed
            </a>
            <a href="/admin/students?status=All" 
               class="btn <%= currentStatus === 'All' ? 'btn-info' : 'btn-outline-info' %>">
              <i class="bi bi-list-ul me-1"></i> All
            </a>
          </div>
        </div>
        <div class="col-md-4">
          <div class="input-group">
            <span class="input-group-text bg-light border-end-0">
              <i class="bi bi-search"></i>
            </span>
            <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Search by name, reg no or phone...">
          </div>
        </div>
        <div class="col-md-4 text-md-end">
          <div class="btn-group" role="group">
            <button onclick="exportToCSV()" class="btn btn-outline-secondary">
              <i class="bi bi-download me-1"></i> Export CSV
            </button>
            <button onclick="window.print()" class="btn btn-outline-primary">
              <i class="bi bi-printer me-1"></i> Print
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Students Table -->
  <div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 py-3">
      <h5 class="card-title mb-0">
        <i class="bi bi-table me-2 text-primary"></i> Student Records
      </h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table id="studentTable" class="table table-hover align-middle mb-0">
          <thead class="bg-light">
            <tr>
              <th class="text-center">#</th>
              <th>Name</th>
              <th>Reg No</th>
              <th>Phone</th>
              <th>Faculty</th>
              <th>Status</th>
              <th>Progress</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach((student, index) => { %>
              <tr class="student-row">
                <td class="text-center">
                  <div class="avatar-circle bg-primary text-white">
                    <%= student.name.charAt(0).toUpperCase() %>
                  </div>
                </td>
                <td>
                  <div class="fw-semibold"><%= student.name %></div>
                  <div class="small text-muted"><%= student.email %></div>
                </td>
                <td><%= student.regNo %></td>
                <td><%= student.contact %></td>
                <td><%= student.facultyName ? (student.facultyName.name || 'N/A') : 'N/A' %></td>
                <td>
                  <span class="badge <%= student.status === 'Completed' ? 'bg-success' : 'bg-primary' %> status-badge-<%= student._id %>">
                    <i class="bi <%= student.status === 'Completed' ? 'bi-check-circle' : 'bi-play-circle' %> me-1"></i>
                    <%= student.status || 'Running' %>
                  </span>
                </td>
                <td>
                  <% if (student.courseProgress && student.courseProgress.length > 0) { %>
                    <% student.courseProgress.forEach(cp => { %>
                      <div class="mb-2">
                        <div class="d-flex justify-content-between mb-1">
                          <span class="small text-truncate" style="max-width: 120px;" title="<%= cp.courseName %>">
                            <%= cp.courseName %>
                          </span>
                          <span class="small fw-semibold"><%= cp.percent %>%</span>
                        </div>
                        <div class="progress" style="height: 8px; border-radius: 4px;">
                          <div class="progress-bar <%= cp.percent >= 70 ? 'bg-success' : cp.percent >= 40 ? 'bg-warning' : 'bg-danger' %>"
                               role="progressbar" 
                               style="width: <%= cp.percent %>%"
                               aria-valuenow="<%= cp.percent %>" 
                               aria-valuemin="0" 
                               aria-valuemax="100">
                          </div>
                        </div>
                      </div>
                    <% }) %>
                  <% } else { %>
                    <span class="text-muted small">No courses assigned</span>
                  <% } %>
                </td>
                <td class="text-center">
                  <div class="d-flex flex-column">
                    <!-- Reports Dropdown -->
                    <div class="dropdown mb-1">
                      <button class="btn btn-sm btn-outline-primary dropdown-toggle w-100" type="button"
                              id="reportDropdown<%= index %>" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-file-earmark-text me-1"></i> Reports
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="reportDropdown<%= index %>">
                        <% student.reports.forEach(report => { %>
                          <li>
                            <a class="dropdown-item" href="/admin/student/report/<%= report._id %>">
                              <i class="bi bi-journal-text me-2"></i> <%= report.course.name %> Report
                            </a>
                          </li>
                        <% }) %>
                      </ul>
                    </div>

                    <!-- Status Change Button -->
                    <div class="mb-1">
                      <% if (student.status === 'Running') { %>
                        <button onclick="updateStatus('<%= student._id %>', 'Completed', this)" 
                                class="btn btn-sm btn-success w-100" title="Mark as Completed">
                          <i class="bi bi-check-circle me-1"></i> Mark Completed
                        </button>
                      <% } else { %>
                        <button onclick="updateStatus('<%= student._id %>', 'Running', this)" 
                                class="btn btn-sm btn-primary w-100" title="Mark as Running">
                          <i class="bi bi-arrow-counterclockwise me-1"></i> Mark Running
                        </button>
                      <% } %>
                    </div>

                    <!-- Edit/Delete Actions -->
                    <div class="btn-group w-100" role="group">
                      <a href="/admin/student/edit/<%= student._id %>" class="btn btn-sm btn-warning" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                      </a>
                      <a href="/admin/student/delete/<%= student._id %>" class="btn btn-sm btn-danger" title="Delete"
                         onclick="return confirm('Are you sure you want to delete this student?')">
                        <i class="bi bi-trash"></i>
                      </a>
                    </div>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Empty State -->
  <% if (students.length === 0) { %>
    <div class="card border-0 shadow-sm mt-4">
      <div class="card-body text-center py-5">
        <i class="bi bi-people fs-1 text-muted mb-3"></i>
        <h4 class="text-muted">No students found</h4>
        <p class="text-muted">Add a new student to get started</p>
        <a href="/admin/student/add" class="btn btn-primary">
          <i class="bi bi-person-plus-fill me-2"></i> Add Student
        </a>
      </div>
    </div>
  <% } %>
</div>

<style>
  .avatar-circle {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    margin: 0 auto;
  }
  .student-row:hover {
    background-color: rgba(0, 0, 0, 0.02);
  }
  .progress {
    min-width: 100px;
  }
  .progress-bar {
    transition: width 0.6s ease;
  }
  @media (max-width: 768px) {
    .table-responsive {
      font-size: 0.875rem;
    }
    .progress {
      min-width: 80px;
    }
  }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  document.getElementById('searchInput').addEventListener('input', function () {
    const value = this.value.toLowerCase();
    document.querySelectorAll('#studentTable tbody tr').forEach(row => {
      row.style.display = row.textContent.toLowerCase().includes(value) ? '' : 'none';
    });
  });

  function exportToCSV() {
    const table = document.getElementById('studentTable');
    const headers = [];
    const rows = [];

    table.querySelectorAll('thead th').forEach(th => headers.push(th.innerText.trim()));

    table.querySelectorAll('tbody tr').forEach(tr => {
      const rowData = [];
      tr.querySelectorAll('td').forEach((td, index) => {
        if (index < tr.querySelectorAll('td').length - 1) {
          let cellText = td.innerText.trim().replace(/\s+/g, ' ');
          rowData.push('"' + cellText.replace(/"/g, '""') + '"');
        }
      });
      rows.push(rowData.join(','));
    });

    const csv = [headers.join(','), ...rows].join('\n');
    const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement('a');
    link.href = URL.createObjectURL(blob);
    link.download = 'student_list_' + new Date().toISOString().slice(0,10) + '.csv';
    link.click();
  }

  // Update student status
  function updateStatus(studentId, newStatus, buttonElement) {
    if (!confirm(`Are you sure you want to mark this student as ${newStatus}?`)) {
      return;
    }

    const button = buttonElement || event.target.closest('button');

    fetch(`/admin/student/update-status/${studentId}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ status: newStatus })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        // Update the status badge
        const badge = document.querySelector(`.status-badge-${studentId}`);
        if (badge) {
          if (newStatus === 'Completed') {
            badge.className = 'badge bg-success status-badge-' + studentId;
            badge.innerHTML = '<i class="bi bi-check-circle me-1"></i> Completed';
          } else {
            badge.className = 'badge bg-primary status-badge-' + studentId;
            badge.innerHTML = '<i class="bi bi-play-circle me-1"></i> Running';
          }
        }

        // Update the button
        if (button) {
          if (newStatus === 'Completed') {
            button.className = 'btn btn-sm btn-primary w-100';
            button.innerHTML = '<i class="bi bi-arrow-counterclockwise me-1"></i> Mark Running';
            button.setAttribute('onclick', `updateStatus('${studentId}', 'Running', this)`);
            button.setAttribute('title', 'Mark as Running');
          } else {
            button.className = 'btn btn-sm btn-success w-100';
            button.innerHTML = '<i class="bi bi-check-circle me-1"></i> Mark Completed';
            button.setAttribute('onclick', `updateStatus('${studentId}', 'Completed', this)`);
            button.setAttribute('title', 'Mark as Completed');
          }
        }

        // Hide the row if filtering by status
        const currentStatus = '<%= currentStatus || "Running" %>';
        if (currentStatus !== 'All' && currentStatus !== newStatus) {
          const row = button.closest('tr');
          if (row) {
            row.style.transition = 'opacity 0.3s';
            row.style.opacity = '0';
            setTimeout(() => {
              row.remove();
              // Check if table is empty
              const tbody = document.querySelector('#studentTable tbody');
              if (tbody && tbody.children.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="text-center py-4 text-muted">No students found</td></tr>';
              }
            }, 300);
          }
        }

        // Show success message
        showNotification(data.message, 'success');
      } else {
        showNotification(data.message || 'Failed to update status', 'danger');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      showNotification('An error occurred while updating status', 'danger');
    });
  }

  // Show notification
  function showNotification(message, type) {
    const alertDiv = document.createElement('div');
    alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed top-0 end-0 m-3`;
    alertDiv.style.zIndex = '9999';
    alertDiv.innerHTML = `
      <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}-fill me-2"></i>
      ${message}
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    document.body.appendChild(alertDiv);

    setTimeout(() => {
      alertDiv.classList.remove('show');
      setTimeout(() => alertDiv.remove(), 150);
    }, 3000);
  }
</script>
