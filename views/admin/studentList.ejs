<div class="container-fluid py-4">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="fw-bold text-primary">
        <i class="bi bi-people-fill me-2"></i> All Students
      </h2>
      <p class="text-muted mb-0">Manage and view all student records</p>
    </div>
    <a href="/admin/student/add" class="btn btn-primary d-flex align-items-center">
      <i class="bi bi-person-plus-fill me-2"></i> Add Student
    </a>
  </div>

  <!-- Search and Actions Card -->
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3 align-items-center">
        <div class="col-md-6">
          <div class="input-group">
            <span class="input-group-text bg-light border-end-0">
              <i class="bi bi-search"></i>
            </span>
            <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Search by name, reg no or phone...">
          </div>
        </div>
        <div class="col-md-6 text-md-end">
          <div class="btn-group" role="group">
            <button onclick="exportToCSV()" class="btn btn-outline-secondary">
              <i class="bi bi-download me-1"></i> Export CSV
            </button>
            <button onclick="window.print()" class="btn btn-outline-primary">
              <i class="bi bi-printer me-1"></i> Print
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Students Table Card -->
  <div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 py-3">
      <h5 class="card-title mb-0">
        <i class="bi bi-table me-2 text-primary"></i> Student Records
      </h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table id="studentTable" class="table table-hover align-middle mb-0">
          <thead class="bg-light">
            <tr>
              <th scope="col" width="5%" class="text-center">#</th>
              <th scope="col" width="20%">Name</th>
              <th scope="col" width="15%">Reg No</th>
              <th scope="col" width="15%">Phone</th>
              <th scope="col" width="15%">Faculty</th>
              <th scope="col" width="20%">Progress</th>
              <th scope="col" width="10%" class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach((student, index) => { %>
              <tr class="student-row">
                <td class="text-center">
                  <div class="avatar-circle bg-primary text-white">
                    <%= student.name.charAt(0).toUpperCase() %>
                  </div>
                </td>
                <td>
                  <div class="fw-semibold"><%= student.name %></div>
                  <div class="small text-muted"><%= student.email %></div>
                </td>
                <td><%= student.regNo %></td>
                <td><%= student.contact %></td>
                <td><%= student.facultyName %></td>
                <td>
                  <% student.courseProgress.forEach(cp => { %>
                    <div class="mb-2">
                      <div class="d-flex justify-content-between mb-1">
                        <span class="small"><%= cp.courseName %></span>
                        <span class="small fw-semibold"><%= cp.percent %>%</span>
                      </div>
                      <div class="progress" style="height: 6px;">
                        <div class="progress-bar <%= cp.percent > 70 ? 'bg-success' : cp.percent > 40 ? 'bg-warning' : 'bg-danger' %>" 
                             role="progressbar" style="width: <%= cp.percent %>%"></div>
                      </div>
                    </div>
                  <% }) %>
                </td>
                <td class="text-center">
                  <div class="d-flex flex-column">
                    <!-- Reports Dropdown -->
                    <div class="dropdown mb-1">
                      <button class="btn btn-sm btn-outline-primary dropdown-toggle w-100" type="button" 
                              id="reportDropdown<%= index %>" data-bs-toggle="dropdown" 
                              data-bs-boundary="viewport" aria-expanded="false">
                        <i class="bi bi-file-earmark-text me-1"></i> Reports
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="reportDropdown<%= index %>">
                        <% student.courses.forEach(course => { %>
                          <li>
                            <a class="dropdown-item" href="/report/<%= student._id %>?course=<%= course._id %>">
                              <i class="bi bi-journal-text me-2"></i> <%= course.name %> Report
                            </a>
                          </li>
                        <% }) %>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                          <a class="dropdown-item" href="/admin/student/reports/<%= student._id %>">
                            <i class="bi bi-collection me-2"></i> All Reports
                          </a>
                        </li>
                      </ul>
                    </div>
                    
                    <!-- Edit/Delete Actions -->
                    <div class="btn-group w-100" role="group">
                      <a href="/admin/student/edit/<%= student._id %>" class="btn btn-sm btn-warning flex-fill" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                      </a>
                      <a href="/admin/student/delete/<%= student._id %>" class="btn btn-sm btn-danger flex-fill" title="Delete"
                         onclick="return confirm('Are you sure you want to delete this student?')">
                        <i class="bi bi-trash"></i>
                      </a>
                    </div>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Empty State -->
  <% if (students.length === 0) { %>
    <div class="card border-0 shadow-sm mt-4">
      <div class="card-body text-center py-5">
        <i class="bi bi-people fs-1 text-muted mb-3"></i>
        <h4 class="text-muted">No students found</h4>
        <p class="text-muted">Add a new student to get started</p>
        <a href="/admin/student/add" class="btn btn-primary">
          <i class="bi bi-person-plus-fill me-2"></i> Add Student
        </a>
      </div>
    </div>
  <% } %>
</div>

<style>
  .avatar-circle {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    margin: 0 auto;
  }
  
  .student-row:hover {
    background-color: rgba(0, 0, 0, 0.02);
  }
  
  /* Fix dropdown positioning in tables */
  .table-responsive {
    position: relative;
  }
  
  .dropdown-menu {
    position: absolute !important;
    z-index: 1050;
  }
  
  @media (max-width: 768px) {
    .table-responsive {
      font-size: 0.875rem;
    }
    
    .btn-group {
      flex-direction: column;
      width: 100%;
    }
    
    .btn-group .btn {
      border-radius: 0.375rem !important;
      margin-bottom: 0.25rem;
    }
  }
  
  @media print {
    .btn-group, .dropdown, .card-header {
      display: none !important;
    }
    
    .table {
      font-size: 0.8rem;
    }
    
    .avatar-circle {
      width: 24px;
      height: 24px;
      font-size: 0.8rem;
    }
  }
</style>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  document.getElementById('searchInput').addEventListener('input', function () {
    const value = this.value.toLowerCase();
    const rows = document.querySelectorAll('#studentTable tbody tr');
    
    if (value === '') {
      rows.forEach(row => {
        row.style.display = '';
      });
      return;
    }
    
    rows.forEach(row => {
      const text = row.textContent.toLowerCase();
      row.style.display = text.includes(value) ? '' : 'none';
    });
  });
  
  function exportToCSV() {
    const table = document.getElementById('studentTable');
    const headers = [];
    const rows = [];
    
    // Get headers
    table.querySelectorAll('thead th').forEach(th => {
      headers.push(th.innerText.trim());
    });
    
    // Get rows
    table.querySelectorAll('tbody tr').forEach(tr => {
      const rowData = [];
      tr.querySelectorAll('td').forEach((td, index) => {
        // Skip the action column (last column)
        if (index < tr.querySelectorAll('td').length - 1) {
          // Clean up the progress data
          let cellText = td.innerText.trim();
          // Remove extra whitespace and newlines
          cellText = cellText.replace(/\s+/g, ' ');
          rowData.push('"' + cellText.replace(/"/g, '""') + '"');
        }
      });
      rows.push(rowData.join(','));
    });
    
    const csv = [
      headers.join(','),
      ...rows
    ].join('\n');
    
    const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement('a');
    const url = URL.createObjectURL(blob);
    link.setAttribute('href', url);
    link.setAttribute('download', 'student_list_' + new Date().toISOString().slice(0,10) + '.csv');
    link.style.visibility = 'hidden';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  }
  
  // Initialize dropdowns after DOM is loaded
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize all dropdowns
    var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
    var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
      return new bootstrap.Dropdown(dropdownToggleEl);
    });
    
    // Fix dropdown positioning in responsive tables
    const table = document.getElementById('studentTable');
    const dropdowns = table.querySelectorAll('.dropdown');
    
    dropdowns.forEach(dropdown => {
      dropdown.addEventListener('show.bs.dropdown', function() {
        // Make dropdown visible in responsive table
        const dropdownMenu = this.querySelector('.dropdown-menu');
        dropdownMenu.style.position = 'fixed';
        
        // Position dropdown below the button
        const button = this.querySelector('.dropdown-toggle');
        const buttonRect = button.getBoundingClientRect();
        dropdownMenu.style.top = buttonRect.bottom + 'px';
        dropdownMenu.style.left = buttonRect.left + 'px';
        dropdownMenu.style.width = buttonRect.width + 'px';
      });
      
      dropdown.addEventListener('hidden.bs.dropdown', function() {
        // Reset position when hidden
        const dropdownMenu = this.querySelector('.dropdown-menu');
        dropdownMenu.style.position = '';
        dropdownMenu.style.top = '';
        dropdownMenu.style.left = '';
        dropdownMenu.style.width = '';
      });
    });
  });
</script>