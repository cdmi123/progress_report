
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="fw-bold text-primary">âž• Add New Student</h2>
  <a href="/admin/dashboard" class="btn btn-outline-dark">
    <i class="bi bi-speedometer2"></i> Back to Dashboard
  </a>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <form method="POST" action="/admin/student/add">
      <div class="row mb-3">
        <div class="col-md-4">
          <label class="form-label">Name</label>
          <input name="name" class="form-control"  required />
        </div>
        <div class="col-md-4">
          <label class="form-label">Contact</label>
          <input name="contact" class="form-control"  required />
        </div>
        <div class="col-md-4">
          <label class="form-label">Password</label>
          <input name="password" class="form-control"  required />
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-4">
          <label class="form-label">Reg No</label>
          <input name="regNo" class="form-control" required />
        </div>
        <div class="col-md-4">
          <label class="form-label">Faculty Name</label>
          <input name="facultyName" class="form-control" required />
        </div>
        <div class="col-md-4">
          <label class="form-label">Courses</label>
<select name="courses" class="form-select" multiple required>
  <% courses.forEach(course => { %>
    <option value="<%= course._id %>"><%= course.name %></option>
  <% }); %>
</select>
<small class="text-muted">Hold CTRL (Windows) or CMD (Mac) to select multiple courses</small>

        </div>

        <div class="row mb-3">

</div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label class="form-label">Start Date</label>
          <input type="date" name="startDate" class="form-control" required />
        </div>
        <div class="col-md-6">
          <label class="form-label">End Date</label>
          <input type="date" name="endDate" class="form-control" required />
        </div>
      </div>

      <button class="btn btn-primary"><i class="bi bi-person-plus-fill"></i> Add Student</button>
      <a href="/admin/students" class="btn btn-outline-secondary">View Students</a>
    </form>
  </div>
</div>
