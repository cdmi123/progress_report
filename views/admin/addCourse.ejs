<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="fw-bold text-primary">ðŸ“˜ Add New Course</h2>
  <a href="/admin/dashboard" class="btn btn-outline-dark">
    <i class="bi bi-speedometer2"></i> Back to Dashboard
  </a>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <form method="POST" action="/admin/course/add">
      <div class="mb-3">
        <label class="form-label">Course Name</label>
        <input name="name" class="form-control" required />
      </div>

      <label class="form-label">Topics</label>
      <div id="topics">
        <div class="input-group mb-2">
          <input type="text" name="topics" class="form-control" required />
          <button type="button" class="btn btn-outline-secondary" onclick="addTopic()">+</button>
        </div>
      </div>

      <button class="btn btn-success"><i class="bi bi-plus-square"></i> Add Course</button>
      <a href="/admin/courses" class="btn btn-outline-secondary">View Courses</a>
    </form>
  </div>
</div>

<script>
  function addTopic() {
    const div = document.createElement('div');
    div.className = 'input-group mb-2';
    div.innerHTML = `
      <input type="text" name="topics" class="form-control" required />
      <button type="button" class="btn btn-outline-danger" onclick="this.parentElement.remove()">âˆ’</button>`;
    document.getElementById('topics').appendChild(div);
  }
</script>