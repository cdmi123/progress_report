<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">
      <i class="bi bi-file-earmark-text"></i> All Progress Reports
    </h2>
    <a href="/admin/dashboard" class="btn btn-outline-dark">
      <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
          <thead class="table-primary text-center">
            <tr>
              <th>#</th>
              <th>Student Name</th>
              <th>Reg No</th>
              <th>Course</th>
              <th>Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% reports.forEach((report, index) => { %>
              <tr class="text-center">
                <td><%= index + 1 %></td>
                <td><%= report.student?.name || '-' %></td>
                <td><%= report.student?.regNo || '-' %></td>
                <td><span class="badge bg-info text-dark"><%= report.course?.name || '-' %></span></td>
                <td><%= new Date(report.createdAt).toLocaleDateString() %></td>
                <td>
                  <a href="/student/report/<%= report._id %>" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> View
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
