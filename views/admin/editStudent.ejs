
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="fw-bold text-primary">✏️ Edit Student</h2>
  <a href="/admin/students" class="btn btn-outline-dark">
    <i class="bi bi-arrow-left"></i> Back to Student List
  </a>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <form method="POST" action="/admin/student/edit/<%= student._id %>">
      <div class="row mb-3">
        <div class="col-md-4">
          <label class="form-label">Name</label>
          <input name="name" class="form-control" value="<%= student.name %>" required />
        </div>
        <div class="col-md-4">
          <label class="form-label">Contact</label>
          <input name="contact" class="form-control" value="<%= student.contact %>" required />
        </div>
        <div class="col-md-4">
          <label class="form-label">Password</label>
          <input name="password" class="form-control" value="<%= student.password %>" required />
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-4">
          <label class="form-label">Reg No</label>
          <input name="regNo" class="form-control" value="<%= student.regNo %>" required />
        </div>
        <div class="col-md-4">
          <label class="form-label">Faculty</label>
          <input name="facultyName" class="form-control" value="<%= student.facultyName %>" required />
        </div>
        <div class="col-md-4">
          <label class="form-label">Courses</label>
          <select name="courses" multiple class="form-select" required>
            <% courses.forEach(course => { %>
              <option value="<%= course._id %>" <%= student.courses.some(c => c._id.equals(course._id)) ? 'selected' : '' %>>
                <%= course.name %>
              </option>
            <% }) %>
          </select>
          <small class="text-muted">Hold CTRL/CMD to select multiple</small>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-md-6">
          <label class="form-label">Start Date</label>
          <input type="date" name="startDate" class="form-control" value="<%= student.startDate %>" required />
        </div>
        <div class="col-md-6">
          <label class="form-label">End Date</label>
          <input type="date" name="endDate" class="form-control" value="<%= student.endDate %>" required />
        </div>
      </div>

      <button class="btn btn-primary"><i class="bi bi-save2"></i> Update Student</button>
    </form>
  </div>
</div>
