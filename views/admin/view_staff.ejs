<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">
      <i class="bi bi-file-earmark-text"></i> All Progress Reports
    </h2>
    <a href="/admin/dashboard" class="btn btn-outline-dark">
      <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
          <thead class="table-primary text-center">
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Email</th>
              <th>Contact No</th>
              <th>Status</th>
              <th>Role</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% staff.forEach((staf, index) => { %>
              <tr class="text-center">
                <td><%= index + 1 %></td>
                <td><%= staf.name || '-' %></td>
                <td><%= staf.email || '-' %></td>
                <td><%= staf.contact || '-' %></td>
                <td><%= staf.status || '-' %></td>
                <td><% if(staf.role==1) { %> Admin <% } else { %> Staff <% } %></td>
                <td><a href="/admin/edit/<%= staf.id %>">Update</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
